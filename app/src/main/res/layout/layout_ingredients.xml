<android.support.v7.widget.CardView
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    android:layout_margin="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ingredient_caption"
            style="@style/Widget.Label"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_recipe"
            android:drawablePadding="@dimen/spacing_medium"
            android:drawableStart="@drawable/ic_recipe"
            android:gravity="center"
            android:padding="10dp"
            android:paddingLeft="@dimen/spacing_medium"
            android:paddingRight="@dimen/spacing_medium"
            android:text="@string/ingredients_headline"
            android:textColor="@color/grey_800"
            android:textSize="26sp"
            tools:text="Ingredients" />

        <TextView
            android:id="@+id/ingredient_list"
            android:layout_marginTop="16dp"
            android:textColor="@color/grey_800"
            android:textSize="@dimen/font_size_big"
            android:paddingLeft="@dimen/spacing_medium"
            android:paddingRight="@dimen/spacing_medium"
            style="@style/Widget.Label"
            tools:text="Pictures in the Sky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.v7.widget.CardView>